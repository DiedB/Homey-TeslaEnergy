{
  "id": "com.tesla.energy",
  "version": "1.2.3",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#e82127",
  "name": {
    "en": "Tesla Energy"
  },
  "description": {
    "en": "Capture, store and consume your renewable energy"
  },
  "category": [
    "energy"
  ],
  "permissions": [],
  "platforms": [
    "local"
  ],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Diederik Bakker",
    "email": "diederik@outlook.com"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "diederik"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/DiedB/Homey-TeslaEnergy/issues"
  },
  "source": "https://github.com/DiedB/Homey-TeslaEnergy",
  "support": "https://github.com/DiedB/Homey-TeslaEnergy/issues",
  "drivers": [
    {
      "id": "tesla-backup-gateway",
      "name": {
        "en": "Tesla Backup Gateway"
      },
      "class": "other",
      "capabilities": [
        "battery_power",
        "battery_soc",
        "measure_battery",
        "grid_power",
        "home_power",
        "solar_power"
      ],
      "images": {
        "large": "/drivers/tesla-backup-gateway/assets/images/large.jpg",
        "small": "/drivers/tesla-backup-gateway/assets/images/small.jpg"
      },
      "energy": {
        "batteries": [
          "OTHER"
        ]
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Connection"
          },
          "children": [
            {
              "id": "ipAddress",
              "type": "text",
              "label": {
                "en": "IP Address"
              },
              "hint": {
                "en": "The IP address or hostname of your Tesla Backup Gateway."
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Credentials"
          },
          "children": [
            {
              "id": "username",
              "type": "text",
              "label": {
                "en": "Username"
              }
            },
            {
              "id": "password",
              "type": "password",
              "label": {
                "en": "Password"
              }
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "ip_address"
        },
        {
          "id": "login_credentials",
          "template": "login_credentials",
          "options": {
            "logo": "pair.svg",
            "usernameLabel": "Email address",
            "usernamePlaceholder": "elon@tesla.com"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}