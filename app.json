{
  "id": "com.tesla.energy",
  "version": "1.1.1",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#e82127",
  "name": {
    "en": "Tesla Energy"
  },
  "description": {
    "en": "Monitor your Tesla Energy system"
  },
  "category": [
    "energy"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Diederik Bakker",
    "email": "diederik@outlook.com"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "diederik"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/DiedB/Homey-TeslaEnergy/issues"
  },
  "source": "https://github.com/DiedB/Homey-TeslaEnergy",
  "drivers": [
    {
      "id": "tesla-backup-gateway",
      "name": {
        "en": "Tesla Backup Gateway"
      },
      "class": "other",
      "capabilities": [
        "battery_power",
        "battery_soc",
        "grid_power",
        "home_power",
        "solar_power"
      ],
      "images": {
        "large": "/drivers/tesla-backup-gateway/assets/images/large.jpg",
        "small": "/drivers/tesla-backup-gateway/assets/images/small.jpg"
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Credentials"
          },
          "children": [
            {
              "id": "username",
              "type": "text",
              "label": {
                "en": "Username"
              }
            },
            {
              "id": "password",
              "type": "password",
              "label": {
                "en": "Password"
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Connection"
          },
          "children": [
            {
              "id": "ipAddress",
              "type": "text",
              "label": {
                "en": "IP Address"
              },
              "hint": {
                "en": "The IP address or hostname of your Tesla Backup Gateway."
              }
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "ip_address"
        },
        {
          "id": "login_credentials",
          "template": "login_credentials",
          "options": {
            "logo": "pair.svg",
            "usernameLabel": "Email address",
            "usernamePlaceholder": "elon@tesla.com"
          },
          "navigation": {
            "previous": "ip_address"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "capabilities": {
    "battery_power": {
      "type": "number",
      "title": {
        "en": "Powerwall draw",
        "nl": "Powerwall-verbruik",
        "de": "Powerwall Verbrauch"
      },
      "icon": "/assets/capabilities/battery-power.svg",
      "units": {
        "en": "W"
      },
      "insights": true,
      "desc": {
        "en": "Powerwall power draw in W"
      },
      "chartType": "stepLine",
      "decimals": 2,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "battery_soc": {
      "type": "number",
      "title": {
        "en": "Powerwall SoC",
        "nl": "Powerwall-laadtoestand",
        "de": "Powerwall Ladezustand"
      },
      "icon": "/assets/capabilities/battery-soc.svg",
      "units": {
        "en": "%"
      },
      "insights": true,
      "desc": {
        "en": "Powerwall SoC percentage"
      },
      "chartType": "stepLine",
      "decimals": 2,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "grid_power": {
      "type": "number",
      "title": {
        "en": "Grid consumption",
        "nl": "Netverbruik",
        "de": "Netzbezug"
      },
      "icon": "/assets/capabilities/grid-power.svg",
      "units": {
        "en": "W"
      },
      "insights": true,
      "desc": {
        "en": "Grid power consumption in W"
      },
      "chartType": "stepLine",
      "decimals": 2,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "home_power": {
      "type": "number",
      "title": {
        "en": "Home consumption",
        "nl": "Huisverbruik",
        "de": "Hausverbrauch"
      },
      "icon": "/assets/capabilities/home-power.svg",
      "units": {
        "en": "W"
      },
      "insights": true,
      "desc": {
        "en": "Home power consumption in W"
      },
      "chartType": "stepLine",
      "decimals": 2,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "solar_power": {
      "type": "number",
      "title": {
        "en": "Solar production",
        "nl": "Productie zonnepanelen",
        "de": "Solarenergie"
      },
      "icon": "/assets/capabilities/solar-power.svg",
      "units": {
        "en": "W"
      },
      "insights": true,
      "desc": {
        "en": "Solar production in W"
      },
      "chartType": "stepLine",
      "decimals": 2,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    }
  }
}